@model DOTNETMVC.Controllers.UserListViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<h1 class="h3 mb-2 text-gray-800">User List</h1>
<p class="mb-4">Displays a list of users fetched from the database.</p>
<!-- End of Page Header -->

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Users</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>

                <tbody>
                @if (Model.Users != null)
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.FullName</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.CreatedAt?.ToString("yyyy-MM-dd") ?? "N/A"</td>
                            <td>
                                <!-- Edit User Button -->
                                <a href="/admin/EditUser?id=@user.Id" class="btn btn-info btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>

                                <!-- Delete User Button -->
                                <a href="/admin/DeleteUser?id=@user.Id" class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No users available.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>